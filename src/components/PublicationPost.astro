---
const {
    title,
    img,
    authors,
    year,
    venue,
    abstract,
    url,
    tags,
    target = "_blank",
} = Astro.props;
import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
---

<div
    class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
    <a href={url} target={target}>
        <div class="hero-content flex-col">
            <div class="w-full">
                <h1 class="text-xl font-bold">
                    {title}
                </h1>
                <!-- <p class="py-1 text-1xl"><i>{authors} ({year})</i></p> -->
                <p class="py-1 text-1xl">{authors} ({year}). <i>{venue}</i>.</p>
            </div>
            {
                img && (
                    <div class="w-full">
                        <Image
                            src={img}
                            width={750}
                            height={422}
                            format="webp"
                            alt={title}
                            class="float-left mr-4 mb-4 max-w-full md:max-w-[15rem] rounded-lg"
                        />
                        <div>
                            <p class="py-1 text-1xl">{abstract}</p>
                            <div class="card-actions justify-end clear-both">
                                {tags &&
                                    tags.map((tag) => (
                                        <a
                                            href={`${tag_url}/${tag}`}
                                            class="badge badge-outline"
                                        >
                                            {tag}
                                        </a>
                                    ))}
                            </div>
                        </div>
                    </div>
                )
            }
            {
                !img && (
                    <div class="w-full">
                        <p class="py-1 text-1xl">{abstract}</p>
                        <div class="card-actions justify-end">
                            {tags &&
                                tags.map((tag) => (
                                    <a
                                        href={`${tag_url}/${tag}`}
                                        class="badge badge-outline"
                                    >
                                        {tag}
                                    </a>
                                ))}
                        </div>
                    </div>
                )
            }
        </div>
    </a>
</div>
